<h1>List of users</h1>

<table border="1">
      <tr>
        <th>
          User
        </th>

        <th>
          Private
        </th>

        <th>
        
        </th>

        <th>
        
        </th>
      </tr>


<% @list_of_users.each do |a_user| %>
      <tr>
        <td>
           <%= a_user.username %>
        </td>
          
        <td>
         <% if a_user.private == true %>
            Yes
          <%else%>
            No  
          <%end%>
        </td>
        <%if session.fetch(:user_id) != nil%>
        <td>
          <button>Follow</button>
        </td>
        <%else%>
        <td>
        </td>
        <%end%>
        <td>
        <%if a_user.private == false%>
          <a href="/users/<%= a_user.username %>">
            Show details
          </a>
        <%else%>
          <a href ="/users"> Show details </a>
         <% end %>
        </td>
      </tr>
      <% end %>
</table>
